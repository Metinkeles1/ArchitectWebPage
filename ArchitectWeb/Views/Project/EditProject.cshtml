@model EntityLayer.Concrete.Project

@{
    ViewData["Title"] = "EditProject";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-3 ">Add Project Page</h3>
</div>
 @using (Html.BeginForm("EditProject", "Project", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Edit Project </p>
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.ProjectId)
                    <div class="form-group mb-4">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Name, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.Name)
                    </div>
                    <div class="form-group mb-4">
                        <label>Project Image</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.ImageUrl)
                    </div>
                    <div class="form-group mb-4">
                        <label>Project Image Small</label>
                        @Html.TextBoxFor(x => x.ImageUrlSmall, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.ImageUrlSmall)
                    </div>
                    <div class="form-group mb-4">
                        <label>Project Url</label>
                        @Html.TextBoxFor(x => x.ProjectUrl, new{@class = "form-control"})
                        @Html.ValidationMessageFor(x=>x.ProjectUrl)
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <button class="btn btn-dark">Close</button>
                </form>
            </div>
        </div>
    </div>
}