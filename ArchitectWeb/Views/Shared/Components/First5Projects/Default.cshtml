@using EntityLayer.Concrete
@model List<Project>

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">First Projects</h4>
                <p class="text-muted mb-1">Project Status</p>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="preview-list">                    
                        @for(int i=0; i<=5; i++)
                        {
                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-primary">
                                        @*<i class="mdi mdi-file-document"></i>*@
                                        <img alt="Image placeholder" src="@Model[i].ImageUrlSmall">
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">@Model[i].Name</h6>
                                        <p class="text-muted mb-0">Project Price: $0000 USD</p>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        @*<p class="text-muted">Da</p>*@
                                        @*<p class="text-muted mb-0">Tamamlanma Oranı: %100</p>*@
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>