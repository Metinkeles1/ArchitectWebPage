@using EntityLayer.Concrete
@model List<About>

@{
    var delay = 100;
}

<div class="section pt-4 px-3 px-lg-4" id="about">
    <div class="container-narrow section-spacing">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h2 my-2">@item.Title</h2>
                    <p>
                        @item.Description
                    </p>
                    <div class="row mt-3">
                        <div class="col-sm-2">
                            <div class="pb-1">Name:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Name</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Email:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Email</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Email:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Email</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Phone:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Phone</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Address:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.Address </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Staus:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">Available</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 offset-md-1 mt-5"
                     data-aos="fade-left"
                     data-aos-delay="@delay">
                    <img class="avatar img-fluid mt-2"
                         src="@item.AboutImg"
                         width="600"
                         height="600"
                         alt="Walter Patterson" />
                </div>
            </div>
        }
       
    </div>
</div>